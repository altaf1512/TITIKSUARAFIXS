<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fragment_coba"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:background="@color/white">

            <!-- Judul Pengaduan -->
            <TextView
                android:id="@+id/tvJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah Pengaduan"
                android:textSize="22sp"
                android:textColor="#FF4081"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:textStyle="bold" />

            <!-- CardView untuk Spinner kategori -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/gray"
                android:layout_marginBottom="16dp">

                <Spinner
                    android:id="@+id/spinnerKategori"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:background="@android:color/white"

                    android:layout_margin="8dp"
                    android:layout_marginBottom="16dp" />
            </androidx.cardview.widget.CardView>

            <!-- CardView untuk EditText deskripsi -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/gray"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etDeskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Deskripsi pengaduan"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:textColor="@color/black"
                    android:gravity="top|start"
                    android:layout_margin="8dp"
                    android:background="@android:color/white" />
            </androidx.cardview.widget.CardView>

            <!-- CardView untuk ImageView preview gambar -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imagePreview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:layout_margin="8dp"/>
<!--                    android:background="@android:color/white" />-->
            </androidx.cardview.widget.CardView>

            <!-- Tombol Pilih Gambar -->
            <Button
                android:id="@+id/btnPilihGambar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Gambar"
                android:textColor="@android:color/white"
                android:backgroundTint="#FF4081"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp" />

            <!-- Tombol Kirim Pengaduan -->
            <Button
                android:id="@+id/btnKirim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kirim Pengaduan"
                android:textColor="@android:color/white"
                android:backgroundTint="#FF4081"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>